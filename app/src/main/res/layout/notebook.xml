<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/windows_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/notebook"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="记事本"
            android:textColor="#fffbf0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/file_path"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:scrollbars="horizontal"
            android:textColor="@color/xiangyabai"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/mmin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/min" />

            <ImageView
                android:id="@+id/mmax"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/max" />

            <ImageView
                android:id="@+id/mclose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/close" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:id="@+id/file_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/button_background"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/file_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textarea_shape"
        android:gravity="top"
        android:minLines="8"
        android:scrollbars="vertical"
        />
</LinearLayout>