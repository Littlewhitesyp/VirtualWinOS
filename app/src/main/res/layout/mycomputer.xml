<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/windows_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|right"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/mmin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/min"/>
        <ImageView
            android:id="@+id/mmax"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/max"/>
        <ImageView
            android:id="@+id/mclose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/close"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/windows_tools_bar"
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/c_pan"
            android:layout_below="@+id/windows_tools_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/cipan"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cpan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="磁盘C"
                    android:textColor="@color/colorPrimary"
                    />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/myprogressbar"
                    android:max="10240"
                    android:progress="0"
                    />

                <TextView
                    android:id="@+id/description_memory_of_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/default_description_memory"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/d_pan"
            android:layout_below="@id/c_pan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/cipan"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dpan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="磁盘D"
                    android:textColor="@color/colorPrimary"
                    />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/myprogressbar"
                    android:max="10240"
                    android:progress="8000"/>

                <TextView
                    android:id="@+id/description_memory_of_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/default_description_memory"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/C_container_GUI"
        android:layout_below="@+id/windows_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/mycomputer_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"/>
            <EditText
                android:id="@+id/Nav"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:scrollbars="horizontal"
                android:background="@null"
                android:scrollIndicators="none"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
            <TextView
                android:id="@+id/mmenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="菜单"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <GridView
            android:id="@+id/C_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3">
        </GridView>
    </LinearLayout>
</RelativeLayout>