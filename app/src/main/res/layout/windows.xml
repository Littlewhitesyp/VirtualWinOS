<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/windows_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|right">
        <ImageView
            android:id="@+id/min_bn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/min"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/max_bn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/max"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/close_bn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/close"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/back_bn"
        android:layout_below="@+id/windows_tools_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:visibility="visible"
        android:layout_below="@+id/windows_tools_bar"
        android:layout_alignParentEnd="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/users_account_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/usersaccount"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/users_account_bn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="用户账户"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/theme_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/theme"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/theme_bn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="外观和个性化"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/internet_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/internet1"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/internet_bn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="网络和Internet"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Ipaddress"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/back_bn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/internetlink"/>
        <TextView
            android:id="@+id/linkstate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"
            android:text="本地连接"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="IPv4"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/benjiIp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/windows_tools_bar"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更改凭据"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/change_avatr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更改头像"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/change_other_users_bn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更改其他账户信息"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/windows_tools_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/change">
            <ImageView
                android:id="@+id/mavatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:src="@drawable/defaultavatar"/>
            <TextView
                android:id="@+id/maccount"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yongpengSun"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/change_avatar_GUI"
        android:layout_below="@id/back_bn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="80dp"
        android:visibility="gone">
        <com.example.hasee.virtualwinos.staggedGridView.StaggeredGridView
            android:id="@+id/change_avatr_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:drawSelectorOnTop="false"
            app:numColumns="3"></com.example.hasee.virtualwinos.staggedGridView.StaggeredGridView>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/change_pingju"
        android:layout_below="@+id/windows_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/account"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                android:height="40dp"
                android:textSize="10sp"
                android:layout_gravity="center"
                />
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:text="密码"
               android:textColor="@color/colorPrimary"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="30sp"/>
           <android.support.design.widget.TextInputLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:passwordToggleEnabled="true"
               app:hintEnabled="false"
               >
               <EditText
                   android:inputType="numberPassword"
                   android:id="@+id/password"
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                   android:textSize="10sp"/>
           </android.support.design.widget.TextInputLayout>
       </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/change_pingju_finish_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/windows_tools_bar"
        android:id="@+id/change_other_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/back_bn">
        <GridView
            android:id="@+id/users_gridview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:numColumns="2"
            ></GridView>
        <TextView
            android:id="@+id/addUser"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="添加新的用户"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pic_choose"
        android:layout_below="@+id/windows_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/bizhi_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"/>
        <GridView
            android:layout_marginLeft="30dp"
            android:id="@+id/waterfall_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            />
    </LinearLayout>
</RelativeLayout>