<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:keepScreenOn="true"
    >
    <LinearLayout
        android:id="@+id/windows_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/remotedesktop"
            android:background="@color/colorPrimary"/>
        <TextView
            android:gravity="center"
            android:id="@+id/remoteIp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="@color/xiangyabai"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|right">
            <ImageView
                android:id="@+id/min_bn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/min"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/max_bn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/max"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/close_bn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/close"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/remote_desktop_show"
        android:layout_below="@id/windows_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </RelativeLayout>